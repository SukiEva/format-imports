{
  "name": "format-imports",
  "version": "1.0.0",
  "description": "JavaScript and TypeScript Import/Export Formatter.",
  "main": "dist/lib/index.js",
  "bin": "dist/bin/main.js",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "tsc",
    "unit-test": "npm run compile && mocha dist/lib/**/*.test.js",
    "e2e-test": "npm run compile && mocha dist/test/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daidodo/format-imports.git"
  },
  "keywords": [
    "sort imports",
    "format imports",
    "format exports",
    "imports",
    "exports",
    "import formatter",
    "import sorter",
    "export formatter"
  ],
  "author": "Zhao DAI <daidodo@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daidodo/format-imports/issues"
  },
  "homepage": "https://github.com/daidodo/format-imports#readme",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "arrowParens": "avoid",
    "embeddedLanguageFormatting": "off"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "tsconfigRootDir": "./",
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false
        }
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ],
      "tsdoc/syntax": "warn"
    }
  },
  "mocha": {
    "ui": "tdd"
  },
  "devDependencies": {
    "@dozerg/end-of-line": "^1.0.5",
    "@tsconfig/recommended": "^1.0.1",
    "@types/eslint": "^7.2.6",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/prettier": "^2.1.6",
    "@types/rewire": "^2.5.28",
    "@types/tmp": "^0.2.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-tsdoc": "^0.2.11",
    "mocha": "^8.2.1",
    "rewire": "^5.0.0",
    "utility-types": "^3.10.0"
  },
  "dependencies": {
    "eslint": "^7.18.0",
    "log4js": "^6.3.0",
    "minimatch": "^3.0.4",
    "optionator": "^0.9.1",
    "prettier": "^2.2.1",
    "tmp": "^0.2.1",
    "typescript": "^4.1.3"
  }
}
