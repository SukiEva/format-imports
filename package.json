{
  "name": "format-imports",
  "version": "3.0.9",
  "description": "JavaScript and TypeScript Import/Export Formatter.",
  "main": "dist/lib/index.js",
  "bin": "dist/bin/main.js",
  "types": "dist/lib/index.d.ts",
  "private": false,
  "scripts": {
    "clean": "rm -rf dist",
    "cleanall": "rm -rf dist node_modules",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "eslint": "eslint --ignore-path src/test/lib/examples/.eslintignore src/ *.ts",
    "test": "npm run eslint && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage src/lib src/test/lib",
    "unit-test": "jest src/lib",
    "lib-test": "jest src/test/lib",
    "lib-test-watch": "jest src/test/lib --watch",
    "cli-test": "jest src/test/cli",
    "cli-test:update": "jest -u src/test/cli",
    "prepublishOnly": "npm run clean && npm i && npm run compile",
    "build": "npm run compile",
    "docs": "rm -rf docs && typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daidodo/format-imports.git"
  },
  "keywords": [
    "sort import",
    "sort imports",
    "format import",
    "format imports",
    "format export",
    "format exports",
    "sort",
    "format",
    "import",
    "imports",
    "export",
    "exports",
    "import formatter",
    "import sorter",
    "export formatter",
    "formatter",
    "sorter"
  ],
  "author": "Zhao DAI <daidodo@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daidodo/format-imports/issues"
  },
  "homepage": "https://github.com/daidodo/format-imports#readme",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "arrowParens": "avoid",
    "embeddedLanguageFormatting": "off"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "eslint-plugin-tsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false
        }
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ],
      "jest/expect-expect": [
        "warn",
        {
          "assertFunctionNames": [
            "expect",
            "assert"
          ]
        }
      ],
      "jest/valid-title": "off",
      "tsdoc/syntax": "warn"
    }
  },
  "jest": {
    "preset": "ts-jest"
  },
  "importSorter": {
    "excludeGlob": [
      "**/test/**/examples/**/*.ts?(x)",
      "**/test/**/examples/**/*.js?(x)"
    ]
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/babel__core": "^7.1.19",
    "@types/eslint": "^8.4.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^17.0.23",
    "@types/prettier": "^2.4.4",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "dir-compare": "^4.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.13",
    "typedoc-plugin-markdown": "^3.11.14",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@dozerg/condition": "^1.0.1",
    "@dozerg/end-of-line": "^1.0.10",
    "@dozerg/require-module": "^0.0.2",
    "eslint": "^8.12.0",
    "fs-extra": "^10.0.1",
    "immutable": "^4.0.0",
    "log4js": "^6.4.4",
    "minimatch": "^5.0.1",
    "node-cache": "^5.1.2",
    "optionator": "^0.9.1",
    "prettier": "^2.6.2",
    "tmp": "^0.2.1",
    "typescript": "^4.6.3",
    "utility-types": "^3.10.0"
  }
}
