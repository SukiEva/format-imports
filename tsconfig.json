{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["src/test", "src/**/*.test.ts"],
  "typedocOptions": {
    "entryPoints": ["src/lib/index.ts"],
    "hideInPageTOC": true,
    "hideBreadcrumbs": true,
    "disableSources": true
  }
}
